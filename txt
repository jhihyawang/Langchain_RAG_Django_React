for ci in range(len(col_xs) - 1):
    cx1, cx2 = int(col_xs[ci]), int(col_xs[ci + 1])
    # 先 clamp 到 0 ~ W
    cx1 = max(0, cx1)
    cx2 = min(tbl_crop.width, cx2)

    # 寬度不足就跳過，避免空 ROI
    if cx2 - cx1 < 2:
        col_texts.append("")             # 保留一欄空字串
        continue

    col_img = tbl_crop.crop((cx1, 0, cx2, tbl_crop.height))
