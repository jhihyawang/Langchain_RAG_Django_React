def pdf_rotation(self):
    rotated_pages = self.correction_direction()
    if not rotated_pages:
        print("âœ… ç„¡éœ€æ—‹è½‰é é¢")
        return False

    log(f"ğŸ”„ é–‹å§‹æ—‹è½‰ PDFï¼š{self.knowledge_title}...")
    doc = fitz.open(self.pdf_path)
    for pg in rotated_pages:
        page = doc[pg - 1]
        page.set_rotation((page.rotation + 90) % 360)

    temp_path = self.pdf_path + ".rotated"
    doc.save(temp_path)
    doc.close()
    os.replace(temp_path, self.pdf_path)
    log(f"âœ… æ–‡ä»¶æ—‹è½‰å®Œæˆï¼š{self.knowledge_title}")
    return True
