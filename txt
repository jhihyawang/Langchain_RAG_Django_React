from docling.document_converter import DocumentConverter  
from docling_core.experimental.serializer.markdown import MarkdownDocSerializer
from docling_core.types.doc import GroupLabel

converter = DocumentConverter()
doc = converter.convert("/Path/To/My/Spreadsheet.xlsx").document

serializer = MarkdownDocSerializer(doc=doc)
sheet_md = [
    serializer.serialize(item=item).text 
    for item in doc.groups 
    if item.label == GroupLabel.SECTION
]
for i, md in enumerate(sheet_md):
    print(f"--- Sheet {i+1} ---\n")
    print(md)

tables = [item for item in doc.groups if item.label == GroupLabel.SECTION]
dfs = [t.export_to_dataframe() for t in tables]
